<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardElevation="3dp"
    card_view:cardCornerRadius="3dp"
    card_view:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:focusable="true"
    android:clickable="true">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/deal_image"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flipkart"
        android:layout_toRightOf="@+id/deal_image"
        android:layout_toEndOf="@+id/deal_image"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/deal_name"/>
        <TextView

            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deal_desrciption"
            android:layout_below="@+id/deal_name"
            android:layout_toRightOf="@+id/deal_image"
            android:layout_toEndOf="@+id/deal_image"
            android:text="Install The App"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/deal_offer"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:text="5rs"
        android:layout_marginBottom="5dp"
        android:layout_below="@+id/deal_name"/>
</RelativeLayout>
    </android.support.v7.widget.CardView>